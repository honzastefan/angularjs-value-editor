{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": false,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "removeComments": false,
    "paths": {
      "shared/*": [
        "src/shared/*"
      ],
      "typings/*": [
        "src/typings/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "idea",
    "docs",
    "reports",
    "**/*.js"
  ]
}
